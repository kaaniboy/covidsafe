{
  "expo": {
    "name": "COVID Tracker",
    "slug": "covid-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "primaryColor": "#ffffff",
    "facebookAppId": "923367898132562",
    "facebookDisplayName": "COVID Tracker",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.covidtracker.covidtracker",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show you nearby places."
      }
    },
    "android": {
      "package": "com.covidtracker.covidtracker",
      "versionCode": 1,
      "permissions": ["LOCATION"]
    }
  }
}
